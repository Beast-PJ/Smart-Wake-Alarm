<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glassmorphic_background"
    android:padding="16dp">

    <!-- Time Picker Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/timePickerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:backgroundTint="#E0E0E0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:timePickerMode="spinner"
                android:theme="@style/TimePickerTheme"/>

            <ImageView
                android:id="@+id/alarmIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_alarm_icon"
                android:tint="@color/primary" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Task Selection Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/taskSelectionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timePickerCard"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        android:backgroundTint="#FAFAFA"
        app:strokeColor="@color/primaryLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a task to stop the alarm"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!-- Task Chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_calculation"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Easy Calculation"
                    android:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chipColor"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_memory"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Memory Game"
                    android:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chipColor"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_scan"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Scan Object/Barcode"
                    android:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chipColor"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Set Alarm Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/setAlarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:layout_below="@id/taskSelectionCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:icon="@drawable/ic_set_alarm"
        android:iconGravity="textStart"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:iconTint="@color/white"/>

    <!-- Decorative Lottie Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/alarmAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:lottie_rawRes="@raw/alarm_animation"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        tools:ignore="MissingClass" />

</RelativeLayout>
